body
  padding 4em
  padding-top 2em
  color #555
  max-width 550px
  margin 0 auto

header
  padding-bottom 2em

#image
  width 100%
  border 1px solid #ccc
  line-height 200px
  text-align center
  img
    width 100%

#colors .color
  float left
  width 20px
  height 20px
  margin 6px 6px 0 0
  border 1px solid #ccc
  &::after
    clear both
    content ""
    display block

#schemes
  margin-top 30px

.scheme
  margin-top 30px
  padding-right 12px
  border 1px solid #ccc
  display inline-block
  &::after
    clear both
    display block
    content ""
  &:nth-child(2n+1)
    margin-right 50px
  .color
    float left
    width 36px
    height 36px
  .button
    float left
    cursor pointer
    line-height 36px
    font-size 18px
    color #ccc
    display inline-block
    margin-left 12px
    text-align center
  .fa-heart-o.selected
    color red
  .fa-trash-o.selected
    color black

