html, body
  margin 0
  padding 0

body
  padding 50px
  padding-top 20px
  color #555
  min-height 100vh

#header, #schemes, #footer
  max-width 550px
  margin 0 auto

#footer
  clear both
  padding 30px 0
  font-size 12px

#logo
  height 110px
  overflow hidden
  padding-bottom 2em

#image
  width 100%
  border 1px solid #ccc
  line-height 200px
  text-align center
  img
    width 100%

#colors .color
  float left
  width 20px
  height 20px
  margin 6px 6px 0 0
  border 1px solid #ccc
  &:after
    clear both
    content ""
    display block

#schemes
  margin-top 30px
  clear both

.scheme
  margin-top 30px
  padding-right 12px
  border 1px solid #ccc
  display inline-block
  float left
  &:after
    clear both
    display block
    content ""
  .color
    float left
    width 36px
    height 36px
  .button
    float left
    cursor pointer
    line-height 36px
    font-size 18px
    color #ccc
    display inline-block
    padding-left 12px
    text-align center
    transition color .3s
  .fa-heart-o
    border-left 1px solid #ccc
    &.selected
      color red
  .fa-trash-o.selected
    color black

@media (max-width: 649px)
  .scheme
    &:nth-child(2n+1)
      margin-right 200px // 强制撑开
@media (min-width: 650px)
  .scheme
    &:nth-child(2n)
      float right

@media (min-width: 1200px)
  body
    // 用 padding 而非 margin 保证 body dropable
    padding-left calc(50% - 575px)
    padding-right calc(50% - 575px)
  #header
    width 550px
    float left
  #main
    margin-top 80px
    width 550px
    float right
  #footer
    max-width 1150px