html, body, ul, li
  margin 0
  padding 0

ul, li
  list-style none

body
  color #555
  min-height 100vh

#nav
  background #fff
  font-family 'Merriweather', serif
  font-weight 900
  box-shadow 0 0 12px rgba(0, 0, 0, .3)
  line-height 48px
  div, ul, li
    padding 0 1em
    float left
  li.current
    background #555
    color #fff
  #user
    padding-right 1em
    float right
  &::after
    display block
    clear both
    content ''
  position relative
  z-index 100

#logo
  color #333
  font-size 24px

#footer
  clear both
  padding 30px 0
  font-size 12px
  span
    cursor pointer

#my-colors
  color #999

#logout
  color #ccc

#login, #signup, #password-reset
  background #fff
  display none
  position fixed
  left 50%
  top 50%
  height 100px
  width 160px
  margin-left -100px
  margin-top -70px
  padding 20px
  box-shadow 0 0 8px #777
  input
    width 100%
    height 12px
    margin 5px 0
  .submit
    cursor pointer
    font-size 12px
    padding 3px 6px
    margin 6px 0
    border 1px solid #777
    display inline-block

#image
  width 100%
  height 60vh
  background-size cover
  background-position center center
  text-align center
  transition background-position 1s linear
  position relative

#colors
  position absolute
  left 24px
  bottom 24px

#colors .color
  float left
  width 20px
  height 20px
  margin 6px 6px 0 0
  box-shadow 0 0 3px rgba(0, 0, 0, .5)
  &:after
    clear both
    content ""
    display block

#schemes
  margin-top 30px
  clear both
  &:after
    clear both
    display block
    content ""

.scheme
  margin-top 30px
  padding-right 12px
  border 1px solid #ccc
  display inline-block
  float left
  &:after
    clear both
    display block
    content ""
  .color
    float left
    width 36px
    height 36px
  .button
    float left
    cursor pointer
    line-height 36px
    font-size 18px
    color #ccc
    display inline-block
    padding-left 12px
    text-align center
    transition color .3s
  .fa-heart-o
    border-left 1px solid #ccc
    &.selected
      color red
  .fa-trash-o.selected
    color black

@media (max-width: 649px)
  .scheme
    &:nth-child(2n+1)
      margin-right 200px // 强制撑开
@media (min-width: 650px)
  .scheme
    &:nth-child(2n)
      float right
