#logout
  color #ccc

#login, #signup, #password-reset
  font-family 'Merriweather', serif
  background #fff
  position fixed
  left 50%
  top 50%
  width 400px
  height 300px
  margin-left -200px
  margin-top -150px
  padding 20px
  box-sizing border-box
  box-shadow 0 0 8px #777
  input
    width 100%
    font-size 1.2em
    padding .5em
    box-sizing border-box
    margin 5px 0
  .submit
    cursor pointer
    padding 3px 6px
    margin 6px 0
    display inline-block
    box-shadow inset 0 0 5px rgba(0, 0, 0, .3)
    border-radius 5px
    background #ddd
    padding .8em
    color #555
    float left

#signup
  height 360px
  margin-top -180px

#reset-password-button
  float left
  cursor pointer
  padding 1.1em
  padding-left .8em